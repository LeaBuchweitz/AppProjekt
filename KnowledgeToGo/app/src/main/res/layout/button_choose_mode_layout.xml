<?xml version="1.0" encoding="utf-8"?>

    <selector xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
        <item android:state_pressed="false" >
            <shape android:shape="rectangle" >
                   <gradient android:endColor="#FFDEE1EA"
                             android:centerColor="#FFCEDAEA"
                             android:startColor="#FFB1CFEA"
                             android:angle="90" />
                   <corners android:radius="5dp" />
                   <stroke android:width="2dp"/>
                   <padding android:left="40dp"
                            android:top="20dp"
                            android:right="40dp"
                            android:bottom="20dp" />
            </shape>
        </item>
        <item android:state_pressed="true" >
            <shape android:shape="rectangle" >
                <gradient android:endColor="#FFA1B2FF"
                    android:centerColor="#FFCCCFFF"
                    android:startColor="#FFA1B2FF"
                    android:angle="90" />
                <corners android:radius="5dp" />
                <stroke android:width="2dp"/>
                <padding android:left="5dp"
                    android:top="5dp"
                    android:right="5dp"
                    android:bottom="5dp" />
            </shape>
        </item>
    </selector>