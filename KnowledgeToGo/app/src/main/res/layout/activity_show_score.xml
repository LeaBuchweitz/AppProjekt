<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.learningapp.infoproject.knowledgetogo.ShowScoreActivity"
    android:background="@drawable/background_vorhang">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/score_pig"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:layout_centerInParent="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/your_distance"
        android:id="@+id/your_distance"
        android:textStyle="bold"
        android:layout_below="@+id/score_pig"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/encouragement"
        android:layout_marginTop="34dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/your_distance"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/distance"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:layout_below="@+id/your_distance"
        android:layout_alignRight="@+id/best_button"
        android:layout_alignEnd="@+id/best_button"
        android:layout_alignParentEnd="false"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/your_rang"
        android:id="@+id/rang"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_below="@+id/encouragement"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bestenliste"
        android:id="@+id/best_button"
        android:layout_below="@+id/rang"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:textColor="#fc000000"
        android:background="@layout/button_best_user"
        android:textStyle="bold"
        android:padding="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/your_rang"
        android:textColor="#ffffe46b"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:layout_below="@+id/rang"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
